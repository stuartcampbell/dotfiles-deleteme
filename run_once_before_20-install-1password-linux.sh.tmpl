{{ if (and (eq .chezmoi.os "linux") (not .transient) -}}

#!/bin/bash

set -euo pipefail

OP_VERSION=1.11.4
ARCH={{ .chezmoi.arch }}
FILENAME=op_linux_${ARCH}_v${OP_VERSION}.zip

tempdir=$(mktemp -d)
cleanup() {
	rm -rf ${tempdir}
}
trap cleanup EXIT

cd ${tempdir}
curl -LO https://cache.agilebits.com/dist/1P/op/pkg/v${OP_VERSION}/${FILENAME}
unzip ${FILENAME} op

mkdir -p "${HOME}/bin"
mv op ${HOME}/bin

{{ end -}}